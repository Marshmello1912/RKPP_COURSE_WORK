<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tamagotchi.controller.GameController">
    <children>
        <Pane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0">
         <children>
            <Label fx:id="petStatusLabel" layoutX="64.0" layoutY="152.0" prefHeight="409.0" prefWidth="270.0" text="Статистика">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <ImageView fitHeight="200.0" fitWidth="200.0" layoutX="1023.0" layoutY="156.0" onMouseClicked="#handleSleepButtonAction" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/sleep.jpg" />
               </image>
            </ImageView>
            <ImageView fitHeight="200.0" fitWidth="200.0" layoutX="815.0" layoutY="365.0" onMouseClicked="#handleWalkButtonAction" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/walk.jpg" />
               </image>
            </ImageView>
            <ImageView fitHeight="200.0" fitWidth="200.0" layoutX="815.0" layoutY="156.0" onMouseClicked="#handleFeedButtonAction" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/feed.jpg" />
               </image>
            </ImageView>
            <ImageView  fitHeight="200.0" fitWidth="200.0" layoutX="1023.0" layoutY="365.0" onMouseClicked="#handlePlayButtonAction" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/play.jpg" />
               </image>
            </ImageView>
            <ImageView fx:id="petImage" fitHeight="730.0" fitWidth="730.0" layoutX="199.0" layoutY="-5.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image  url="@images/CAT_full.png" />
               </image>
            </ImageView>
         </children>
        </Pane>
    </children>
</AnchorPane>
